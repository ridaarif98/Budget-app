<%= form_with model: @group, class:"input-form"  do |f|%>

  <nav class="header">
  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
    <li>
    <a href="/"><i class="fa fa-arrow-left"></i></a>
    </li>
    <li>
      <h2 class="heading fw-bold">Add Category</h2>
    </li>
    <li>
    <%= f.submit "Create Category", class:"btn btn-primary form-control" %> 
    </li>
  </ul>
  </nav>
    
    <%= f.label :title %><br>
    <%= f.text_field :name,  {:required => true}%><br>

    <%= f.label :Icon %><br>
    <%= f.select :icon,options_for_select([
        ['grocery', @icons[0]],
        ['shopping' ,@icons[1]],
        ['education' ,@icons[2]],
        ['bills' ,@icons[3]],
        ['insurance' ,@icons[4]],
        ['travel' ,@icons[5]],
      ]), required: true  %>

    
<%end%>

